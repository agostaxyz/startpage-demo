---
import { Image } from 'astro:assets';

interface Props {
	title: string;
	href: string;
    img: string;
}
const { title, href, img } = Astro.props;
---
<a href={href}>
    <Image
        src={img}
        alt={title}
        width={100}
        height={100}
        decoding="async"
        loading="lazy"
    ></Image>
    <p class="line-clamp-1">
        {title}
    </p>
</a>